@model ApproveHiringRequestViewModel
@{
    ViewData["Title"] = "View Hiring Details";

    List<ApproveHireRequest> requests = new List<ApproveHireRequest>();

    for (int i = 0; i < Model.hireDetails.NoOfBusses; i++)
    {
        requests.Add(new ApproveHireRequest());
    }
}
<link href="~/lib/select2/css/select2.css" rel="stylesheet" />


<h1>View Hiring Details</h1>

<div>
    <div class="card-body" style="background-color:white">

        <div id="SubmitHireForm" method="post" asp-action="HireBus" asp-controller="Hiring">
            <div class="row justify-content-md-center">
                <div class="col-md-6">
                    <div class="form-body">
                        <h6 style=" font-weight: 800; ">Hirer Information</h6>
                        <div class="form-group">
                            <label>Organisation Name  </label>
                            <input type="text" asp-for="hireDetails.OrganisationName" class="form-control" placeholder="eg. Nestle Ghana" readonly>
                        </div>
                        <div class="form-group">
                            <label>Contact Full Name <span class="text-danger">*</span> </label>
                            <input type="text" asp-for="hireDetails.ContactName" class="form-control" placeholder="Full Name" readonly>
                        </div>
                        <div class="form-group">
                            <label>Postal Address </label>
                            <input type="text" asp-for="hireDetails.PostalAddress" class="form-control" placeholder="Postal Address" readonly>
                        </div>
                        <div class="form-group">
                            <label>Email </label>
                            <input type="email" asp-for="hireDetails.Email" class="form-control" placeholder="Email" readonly>
                        </div>
                        <div class="form-group">
                            <label>Primary Phone Number </label>
                            <input type="tel" asp-for="hireDetails.PrimaryContactNumber" class="form-control" placeholder="(+233)123456789" readonly>
                        </div>
                        <div class="form-group">
                            <label>Other Phone Number</label>
                            <input type="tel" asp-for="hireDetails.OtherContactNumber" class="form-control" placeholder="(+233)123456789" readonly>
                        </div>


                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-body">
                        <h6 style=" font-weight: 800; ">Hire Details</h6>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label>Journey Start Date  </label>
                                <input type="date" asp-for="hireDetails.StartDate" class="form-control" placeholder="start date" readonly>
                            </div>
                            <div class="form-group col-sm-6">
                                <label>Journey Start Time  </label>
                                <input type="time" asp-for="hireDetails.StartTime" class="form-control" placeholder="start time" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label>Journey Finish Date  </label>
                                <input type="date" asp-for="hireDetails.FinishDate" class="form-control" placeholder="Return date" readonly>
                            </div>
                            <div class="form-group col-sm-6">
                                <label>Journey Finish Time  </label>
                                <input type="time" asp-for="hireDetails.FinishTime" class="form-control" placeholder="Return time" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label>Type Of Vehicle </label>
                                <input class="form-control" asp-for="@Model.hireDetails.VehicleTypeForHireType" readonly />
                            </div>
                            <div class="form-group col-sm-6">
                                <label>No. of Bus(es) needed  </label>
                                <input asp-for="hireDetails.NoOfBusses" class="form-control" min="1" placeholder="eg. 1" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label>Number of Passengers  </label>
                                <input asp-for="hireDetails.NoOfPassangers" class="form-control" placeholder="eg. 30" readonly>
                            </div>
                            <div class="form-group col-sm-6">
                                <label>Destination  </label>
                                <input readonly type="text" id="Destination" asp-for="hireDetails.Destination" class="form-control" placeholder="eg. Kakum National Park">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Purpose of Hire?</label>
                            <textarea readonly type="text" class="form-control " asp-for="hireDetails.PurposeOfHire" placeholder="eg. FieldTrip, chilling"></textarea>
                        </div>
                        <div class="form-group">
                            @{
                                var numberofdays = (Model.hireDetails.FinishDate.Date - Model.hireDetails.StartDate.Date);
                                var SingleDayPrice = (@Model.hireDetails.NoOfBusses * @Model.hireDetails.DistanceCalculatedFromOrginCost);
                            }
                            <h4 class="font-weight-bold text-success">Number of days: <span>@numberofdays.TotalDays days</span> </h4>
                            <span class="font-small-3 text-danger">
                                NB: Calculation made is per day. That is No.Buses(@Model.hireDetails.NoOfBusses) x Calculated cost(@Model.hireDetails.DistanceCalculatedFromOrginCost)
                            </span>
                            <h4 class="font-weight-bold text-success">
                                Total Cost for Vehicles/Day:
                                <span>
                                    @Model.hireDetails.NoOfBusses x @Model.hireDetails.DistanceCalculatedFromOrginCost = GHC @String.Format("{0:n}", @SingleDayPrice)
                                </span>
                            </h4>

                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <hr>

                    <h6 style=" font-weight: 800; text-align:center">Hiring Costs</h6>
                    @* IF THE HIRING HAS BEEN APPROVED BY THE TRANSPORT UNIT *@
                    @if (@Model.hireDetails.Status == "Approved")
                    {
                <div class="col-md-12">
                    <input asp-for="@Model.hireDetails.HirerId" hidden id="ApproveId" />

                    <div class="d-flex flex-wrap">
                        @for (int i = 0; i < @Model.approveHireRequest.Count; i++)
                        {
                            <div class="p-2 ">
                                <h6 style="display:none">@{int num = i + 1;}</h6>
                                <h6>Diver @num  </h6>
                                <input asp-for="@Model.approveHireRequest[i].HirerId" value="@Model.hireDetails.HirerId" hidden id="ApproveId" />

                                <div>

                                    <div class="form-group">
                                        <label>Driver Price (GHC)</label>
                                        <input asp-for="@Model.approveHireRequest[i].DriverFee" class="form-control" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label>Washing fee (GHC)</label>
                                        <input asp-for="@Model.approveHireRequest[i].WashingFee" class="form-control" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label>Assigned vehicle </label>
                                        <input asp-for="@Model.approveHireRequest[i].RegistrationNumber" class="form-control" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label>Assigned Driver</label>
                                        <input asp-for="@Model.approveHireRequest[i].DriverName" class="form-control" readonly />
                                    </div>

                                </div>
                                <hr>

                            </div>
                        }
                    </div>

                    <h1 style="display:flex">
                        <em>TOTAL GRAND PRICE:</em>
                        <strong>GHC @Model.approveHireRequest[0].CalculatedCost</strong>
                    </h1>
                    <hr />
                    <form method="post" id="CompletedTripDetails">
                        <input asp-for="completedHireRequest.HirerId" hidden value="@Model.approveHireRequest[0].HirerId" />
                        <div class="form-group">
                            <label>Datetime Bus Returned </label>
                            <input type="datetime-local" asp-for="completedHireRequest.DateTimeReturned"  class="form-control" />
                        </div>
                        
                    </form>
                    <div class="form-actions center" style="text-align:center">
                        @*<button type="button" class="btn btn-warning mr-1">
                            <i class="ft-x"></i> Set Invalid
                        </button>*@
                        <button class="btn btn-success" id="CompletedTrip">
                            <i class="la la-check-square-o"></i> Completed Trip
                        </button>
                    </div>

                </div>

                    }
                    else
                    {
                        //TotalPrice Calculated Prce//
                        <h4 style="padding:0% 3%;" class="text-danger">
                            NB: Price calculated is the number of days by the price for each vehicle
                        </h4>
                        <div class="row" style="padding:0% 2%; text-align:center">
                            <label class="col-sm-2 font-weight-bold font-size-large text-danger" style="padding:0px">Total Price GHC</label>
                            <input id="TotalCalculatedPrice" asp-for="@requests[0].CalculatedCost" class="form-control col-md-3" />
                        </div>
                        //TotalPrice Calculated Prce//

                        <div class="col-md-12">
                            <input asp-for="@Model.hireDetails.HirerId" hidden id="ApproveId" />
                            @* WHEN THE HIRING HAS NOT BEEN APPROVED BY THE TRANSPORT UNIT *@
                            <form id="List" asp-action="ProceedToApproveHire" asp-controller="Hiring">
                                <div class="d-flex flex-wrap">
                                    @for (int i = 0; i < requests.Count; i++)
                                    {
                                        <div class="p-2 ">
                                            <h6>Diver @i </h6>
                                            <input asp-for="@requests[i].HirerId" value="@Model.hireDetails.HirerId" hidden id="ApproveId" />

                                            <div>
                                                <input id="TotalCalculatedPriceToSend" hidden asp-for="@requests[i].CalculatedCost" class="form-control col-md-3" />

                                                <div class="form-group">
                                                    <label>Driver Price</label>
                                                    <input type="number" asp-for="@requests[i].DriverFee" class="form-control CalculatePriceFromInput" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Washing fee</label>
                                                    <input type="number" asp-for="@requests[i].WashingFee" class="form-control CalculatePriceFromInput" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Assign vehicle</label>
                                                    <select style="width: 200px !important" class="select2 form-control" asp-items="@Model.Vehicles" asp-for="@requests[i].VehicleId" required>
                                                        <option>Select Vehicle</option>
                                                    </select>
                                                    <span class="text-danger" asp-validation-for="approveHireRequest[i].VehicleId">  </span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Assigned Driver</label>
                                                    <select style="width: 200px !important" class="select2 form-control" asp-items="@Model.Drivers" asp-for="@requests[i].DriverId" required>
                                                        <option>Select Driver</option>
                                                    </select>
                                                    <span class="text-danger" asp-validation-for="approveHireRequest[i].DriverId">  </span>
                                                </div>
                                            </div>
                                            <hr>

                                        </div>


                                    }
                                </div>

                                <div class="form-actions center" style="text-align:center">
                                    <button type="button" class="btn btn-warning mr-1">
                                        <i class="ft-x"></i> Set Invalid
                                    </button>
                                    <button class="btn btn-primary" type="submit" id="ApproveButton">
                                        <i class="la la-check-square-o"></i> Proceed To Approve
                                    </button>
                                </div>
                            </form>



                        </div>

                    }



                </div>

            </div>

        </div>
    </div>

</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/select2/js/select2.js" defer></script>
<script>

    $(document).ready(function () {
        //select all select tag and initialise select2 library
        $('select.select2').each(function (index) {
            console.log(index);
            $("#select_" + index).select2();
        });

        //Calculate initial prices
        //That is number of days by the price for a vehicle
        var calc = @SingleDayPrice * @numberofdays.Days;
        document.getElementById('TotalCalculatedPrice').value = calc ;
        document.getElementById('TotalCalculatedPriceToSend').value = calc;
        $('.CalculatePriceFromInput').on("change.add", calculateSum);

        $('#ApproveButton').click(function () {

            var tt = $('#List').serialize();
            console.log(tt);
            var TotalCalculatedHiringCost = document.getElementById('TotalCalculatedPrice').value;
            var url = '/Hiring/ProceedToApproveHire';

            $.ajax({
                type: "POST",
                dataType: "json",
                beforeSend: function () {
                    toastr.info('Approving data', 'Approving', { "hideDuration": 3000 });

                },
                url: url,
                data: tt,
                headers: {
                },
                success: function (response) {

                    toastr.success('Hiring Approved', 'Success', { "hideDuration": 3000 });
                    window.location.href = "/Hiring/HiringDashboard";

                },
                error: function (xhr) {
                    toastr.error('We could not acesses the server\n Something went wrong', 'Error', { "hideDuration": 3000 });

                }
            });

        });

        //Calculates the sum of input values
        function calculateSum() {
            var totalPrice = 0;

            $('.CalculatePriceFromInput').each(function () {
                if ($(this).val() != '')
                    totalPrice += parseFloat($(this).val());
            });
            document.getElementById('TotalCalculatedPriceToSend').value = parseFloat(calc) + parseFloat(totalPrice);
            document.getElementById('TotalCalculatedPrice').value = parseFloat(calc) + parseFloat(totalPrice);
        }

        $('#CompletedTrip').click(function () {
            console.log("I work")
        })
    })

</script>
