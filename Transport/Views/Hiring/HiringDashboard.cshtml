@model List<HireDetailsViewModel>
@{
    ViewData["Title"] = "Hiring";
}
<link rel="stylesheet" type="text/css" href="~/app-assets/css/core/menu/menu-types/vertical-menu-modern.css">
<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block">Hiring</h3>

    </div>
    <div class="content-header-right col-md-6 col-12">
        <div class="dropdown float-md-right">
            <a class=" btn btn-primary btn-glow" asp-action="ViewHiringTableMatrix" asp-controller="Hiring">
                <i class="la la-taxi"></i>
                <span class="menu-title" data-i18n="nav.dash.main">
                    View Hiring Table Matrix
                </span>
            </a>

        </div>
    </div>

    <div class="card" style="width:100%">
        <div class="card-head">
            <div class="card-header">
                <h4 class="card-title font-weight-bold">Hiring Requests List</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
            </div>
        </div>

        @if (Model.Count >= 1)
        {
            <div class="card-content">
                <div class="card-body">
                    <!-- Invoices List table -->
                    <div class="table-responsive">
                        <table id="invoices-list" class=" table table-striped table-bordered zero-configuration ">
                            <thead>
                                <tr>

                                    <th>Date</th>
                                    <th>Hiring Id</th>
                                    <th>Contact Name</th>
                                    <th>Destination</th>
                                    <th>Status</th>
                                    <th>No. Of Passengers</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- PAID -->
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                <tr>

                                    <td>@Model[i].CreatedOn</td>
                                    <td>
                                        <a class="text-bold-600">
                                            HRG-@Model[i].HirerId
                                        </a>
                                    </td>
                                    <td>
                                        <a class="text-bold-600">
                                            @Model[i].ContactName
                                        </a>
                                    </td>
                                    <td>@Model[i].Destination</td>
                                    @if (@Model[i].Status == "Approved")
                                    {
                                        <td> <span class="badge badge-default badge-success badge-lg">@Model[i].Status</span> </td>

                                    }
                                    else if (@Model[i].Status == "Completed")
                                    {
                                        <td> <span class="badge badge-default bg-light text-dark">@Model[i].Status</span> </td>

                                    } 
                                    else if (@Model[i].Status == "Invalid")
                                    {
                                        <td> <span class="badge badge-default bg-danger text-dark">@Model[i].Status</span> </td>

                                    }
                                    else
                                    {
                                        <td> <span class="badge badge-default badge-primary badge-lg">@Model[i].Status</span></td>

                                    }
                                    <td>@Model[i].NoOfPassangers</td>
                                    <td>
                                        <a asp-action="ViewHiringDetails" asp-controller="Hiring" asp-route-HirerId="@Model[i].HirerId">
                                            View Details...
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>

                                    <th>Date</th>
                                    <th>Hiring Id</th>
                                    <th>Contact Name</th>
                                    <th>Destination</th>
                                    <th>Status</th>
                                    <th>No. Of Passengers</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!--/ Invoices table -->
                </div>
            </div>


        }
        else
        {
            <div class="card-content">
                <div class="card-body">
                    <!-- Invoices List table if Empty -->
                    <div class="table-responsive">
                        <h4>No records Available</h4>
                    </div>
                    <!--/ Invoices table if empty-->
                </div>
            </div>
        }



    </div>
</div>
<script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
<script src="~/app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>

<script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript" defer></script>
<!-- END PAGE VENDOR JS-->

<script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js" type="text/javascript" defer></script>

<script>
    $(document).ready(function () {
        $('#invoices-list').DataTable();

        //$('#DeleteButton').on('click', function () {
