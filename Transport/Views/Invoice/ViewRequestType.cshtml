@model RequestTypesViewModel
@{
    ViewData["Title"] = "ViewRequestType";
}
<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">

<div style="display: flex; justify-content: space-between; padding-bottom: 20px;">
    <h1>Request Types</h1>
    <a data-toggle="modal" data-target="#exampleModal" class="btn btn-primary square btn-glow px-2" style="color:white">
        Create Request Type
    </a>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Request Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="CreateRequestType" method="post" asp-controller="Invoice">
                        <div class="form-group">
                            <label>Request Type Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="NewReqestTypeNameAndCharge.RequestTypeName" placeholder="RequestType Name">
                            <span asp-validation-for="NewReqestTypeNameAndCharge.RequestTypeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>RequestType Charge Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="NewReqestTypeNameAndCharge.RequestTypeChargeName" placeholder="Charge Name">
                            <span asp-validation-for="NewReqestTypeNameAndCharge.RequestTypeChargeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>RequestType ChargeValue (%) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" asp-for="NewReqestTypeNameAndCharge.RequestTypeChargeValue" placeholder="Charge Value" style="width:50%">
                            <span asp-validation-for="NewReqestTypeNameAndCharge.RequestTypeChargeValue" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add Request Type</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


</div>
<div class="card-content">
    <div class="card-body" style="background-color:white">
        <!-- Invoices List table -->
        <div class="table-responsive">
            <table id="invoices-list" class=" table table-striped table-bordered zero-configuration ">
                <thead>
                    <tr>

                        <th>Date</th>
                        <th>Request Type Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RequestTypes.Count == 0)
                    {

                        <tr>
                            <td>No data available</td>
                        </tr>

                    }
                    else
                    {
                        foreach (var item in Model.RequestTypes)
                        {
                            <tr>

                                <td>@item.RequestTypeCharges.FirstOrDefault().ActiveFrom</td>
                                <td>@item.RequestTypeName</td>

                                <td>
                                    <span class="dropdown">
                                        <button id="btnSearchDrop2" type="button" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="true" class="btn btn-primary dropdown-toggle dropdown-menu-right">
                                            <i class="ft-settings"></i>
                                        </button>
                                        <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">

                                            <a asp-action="EditRequestType" asp-controller="Invoice" asp-route-RequestTypeId="@item.RequestTypeId" class="dropdown-item">
                                                <i class="la la-pencil"></i> Edit
                                            </a>

                                            <button onclick="ConfirmDeleteForRequestType(@item.RequestTypeId)" asp-route-RequestTypeId="@item.RequestTypeId" class="dropdown-item">
                                                <i class="la la-trash"></i> Delete
                                            </button>


                                        </span>
                                    </span>
                                </td>
                            </tr>

                        }

                    }

                </tbody>
                <tfoot>
                    <tr>

                        <th>Date</th>
                        <th>Request Type Name</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!--/ Invoices table -->
    </div>
</div>

<script src="~/app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
<script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript" defer></script>
<!-- END PAGE VENDOR JS-->
<script src="~/app-assets/js/scripts/tables/datatables/datatable-basic.js" type="text/javascript" defer></script>

<script src="~/app-assets/vendors/js/extensions/sweetalert.min.js" type="text/javascript"></script>
<script src="~/app-assets/js/scripts/extensions/sweet-alerts.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $('#invoices-list').DataTable();

        //$('#DeleteButton').on('click', function () {
        //    console.log("i work")
        //})
    });




    ///////////SWEET ALERT FOR ROUTINE MAINTENANCE/////////////

    function ConfirmDeleteForRequestType(ev) {
        var url = 'Invoice/DeleteRequestType';
        var completeUrl = baseUrl + url;
        swal({
            title: "Are you sure?",
            text: "You will not be able to recover this file!",
            icon: "warning",
            buttons: {
                cancel: {
                    text: "No, cancel plx!",
                    value: null,
                    visible: true,
                    className: "",
                    closeModal: false,
                },
                confirm: {
                    text: "Yes, delete it!",
                    value: true,
                    visible: true,
                    className: "",
                    closeModal: false
                }
            }
        })
            .then((isConfirm) => {
                if (isConfirm) {
                    console.log('ajax deleted', ev);
                    $.ajax({
                        url: completeUrl,
                        dataType: 'html',
                        method: 'get',
                        data: { 'RequestTypeId': ev },
                        success: function (res) {
                            console.log('Sucess');
                            swal("Deleted!", "Your imaginary file has been deleted.", "success");
                            window.location.href = baseUrl +"Invoice/ViewRequestType";


                        },
                        error: function (err) {
                            console.log(err, "err");
                            swal("Error!", "We could not access the server.", "error");

                        }
                    });
                } else {
                    swal("Cancelled", "Your file is safe", "error");
                }
            });

    };

</script>