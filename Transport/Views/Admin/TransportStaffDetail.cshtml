@model List<TransportStaffDetailViewModel>
@{
    ViewBag.Title = "Details";
}
<div style=" background-color: white; padding: 2%;">
    <div class="row">
        <div class="col-md-2">
            <img src="data:image/png;base64," alt="" class="img-rounded img-responsive" />
        </div>
        <div class="col-md-8">
            <h4>
                @Model[0].SURNAME @Model[0].OTHERNAME
            </h4>
            <h5>
                @Model[0].RANK
            </h5>
            <p>
                <small>Staff ID:</small> @Model[0].StaffID2
            <br />
                @{ var email = " ";
                    if (@Model[0].TECHMAIL == null)
                    {

                    }
                    else
                    {
                        email = Model[0].TECHMAIL + "@knust.edu.gh";
                    } }
                <i class="glyphicon glyphicon-envelope"></i> <small>Email: </small> @email
                <br />
                <i class="glyphicon glyphicon-gift"></i> <small>DOB: </small>@Model[0].DATEOFBIRTH.Date.ToLongDateString()
            </p>
            <!-- Split button -->
        </div>
    </div>

    <h2 class="text-body mt-1">Ranks</h2>
    <div class="table-responsive">
        <table id="invoices-list" class=" table table-striped table-bordered zero-configuration ">
            <thead>
                <tr>
                    <th>Start Date</th>
                    <th>Rank </th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.ENDDATE.ToString() == "1/1/0001 12:00:00 AM")
                    {
    <tr>
        <td>@item.STARTDATE.ToLongDateString()</td>
        <td>
            @item.RANK
        </td>
        <td>
            Still at Rank
        </td>
    </tr>
 }
else
{
<tr>
    <td>@item.STARTDATE.ToLongDateString().</td>
    <td>
        @item.RANK
    </td>
    <td>
        @item.ENDDATE.ToLongDateString()
    </td>
</tr>
}
}
            </tbody>
            <tfoot>
                <tr>
                    <th>Start Date</th>
                    <th>Rank </th>
                    <th>End Date</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
