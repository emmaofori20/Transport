@*@model List<VehicleMaintenanceRequestsViewModel>*@
@model RequestVehicleViewModel

@{
    ViewBag.Title = "Request";
}
<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/sweetalert.css">

<div>
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
            <h3 class="content-header-title mb-0 d-inline-block">Maintenance</h3>

        </div>
        <div class="content-header-right col-md-6 col-12">
            <div class="dropdown float-md-right">
                <button class="btn btn-primary dropdown-toggle square btn-glow px-2" id="dropdownBreadcrumbButton"
                        type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Request Maintenance
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownBreadcrumbButton">
                    <a class="dropdown-item"><i class="la la-calendar-check-o"></i> Routine Maintenance </a>
                    <a class="dropdown-item" data-toggle="modal"
                       data-target="#bootstrap"><i class="la la-cart-plus"></i> Request Maintenance</a>
                </div>
                @* Request Maintenance Partial View *@
                <div class="modal fade text-left" id="bootstrap" tabindex="-1" role="dialog" aria-labelledby="myModalLabel35"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <partial name="_RequestMaintenancePartial">
                    </div>

                </div>
                @* Request Maintenance Partial View *@

            </div>
        </div>
    </div>
    <div class="content-body">
        <section class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-head">
                        <div class="card-header">
                            <h4 class="card-title">Maintenance Requests List</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                            <div class="heading-elements">
                                <span class="dropdown">
                                    <button id="btnSearchDrop1" type="button" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="true" class="btn btn-warning btn-sm dropdown-toggle dropdown-menu-right">
                                        <i class="ft-download-cloud white"></i>
                                    </button>
                                    <span aria-labelledby="btnSearchDrop1" class="dropdown-menu mt-1 dropdown-menu-right">
                                        <a href="#" class="dropdown-item"><i class="la la-calendar"></i> Due Date</a>
                                        <a href="#" class="dropdown-item"><i class="la la-random"></i> Priority </a>
                                        <a href="#" class="dropdown-item"><i class="la la-bar-chart"></i> Balance Due</a>
                                        <a href="#" class="dropdown-item"><i class="la la-user"></i> Assign to</a>
                                    </span>
                                </span>
                                <button class="btn btn-success btn-sm"><i class="ft-settings white"></i></button>
                            </div>
                        </div>
                    </div>

                    @if (@Model.VehicleMaintenanceRequests.Count > 1)
                    {
                        <div class="card-content">
                            <div class="card-body">
                                <!-- Invoices List table -->
                                <div class="table-responsive">
                                    <table id="invoices-list" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input type="checkbox" class="input-chk-all">
                                                </th>
                                                <th>Date</th>
                                                <th>Invoice #</th>
                                                <th>Maintained By</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- PAID -->
                                            @for (int i = 0; i < @Model.VehicleMaintenanceRequests.Count; i++)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="input-chk">
                                                    </td>
                                                    <td>@Model.VehicleMaintenanceRequests[i].Date</td>
                                                    <td><a class="text-bold-600">INV-@Model.VehicleMaintenanceRequests[i].RequestId-@Model.VehicleMaintenanceRequests[i].spareParts</a></td>
                                                    <td>@Model.VehicleMaintenanceRequests[i].MaintainedBy</td>
                                                    <td>
                                                        <span class="badge badge-default badge-light badge-lg">@Model.VehicleMaintenanceRequests[i].Status</span>
                                                    </td>
                                                    <td>Ghc @Model.VehicleMaintenanceRequests[i].MaintenanceCost</td>
                                                    <td>
                                                        <span class="dropdown">
                                                            <button id="btnSearchDrop2" type="button" data-toggle="dropdown" aria-haspopup="true"
                                                                    aria-expanded="true" class="btn btn-primary dropdown-toggle dropdown-menu-right">
                                                                <i class="ft-settings"></i>
                                                            </button>
                                                            <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">
                                                                <a asp-action="RequestSparePartDetails" asp-controller="Request" asp-route-ListId="@Model.VehicleMaintenanceRequests[i].RequestId" class="dropdown-item"><i class="la la-eye"></i> View Request</a>
                                                                <a class="dropdown-item"><i class="la la-pencil"></i> Edit Request</a>
                                                                <a asp-action="DeleteRequestMaintenance" asp-controller="Request" asp-route-RequestId="@Model.VehicleMaintenanceRequests[i].RequestId" id="confirm-text" class="dropdown-item">
                                                                    <i class="la la-trash"></i> Delete Request
                                                                </a>
                                                            </span>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>
                                                    <input type="checkbox" class="input-chk-all">
                                                </th>
                                                <th>Date</th>
                                                <th>Invoice #</th>
                                                <th>Maintained By</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <!--/ Invoices table -->
                            </div>
                        </div>


                    }
                    else
                    {
                        <div class="card-content">
                            <div class="card-body">
                                <!-- Invoices List table if Empty -->
                                <div class="table-responsive">
                                    <h4>No records Available</h4>
                                </div>
                                <!--/ Invoices table if empty-->
                            </div>
                        </div>
                    }


                </div>
            </div>
        </section>
    </div>
</div>



