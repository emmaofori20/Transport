@model VehicleDetailViewModel
@{
    ViewBag.Title = "Vehicle Details";
}
<div class="container">

    <div>
        <h1 class="font-weight-bold">@Model.MakeName.ToUpper() @Model.vehicle.Model.ToUpper()</h1><br />
        <div class="row full-width mb-1">
            <div class="col-md-4">
                <h5 class="h5 font-weight-normal"><span class="font-weight-bold">OWNER : </span>@Model.vehicle.Owner</h5>
                <h5 class="h5 font-weight-normal"><span class="font-weight-bold">COLOUR : </span>@Model.vehicle.Colour</h5>

            </div>
            <div class="col-md-4">
                <h5 class="h5 font-weight-light"><span class="font-weight-bold">REGISTRATION NO : </span>@Model.vehicle.RegistrationNumber</h5>
                <h5 class="h5 font-weight-normal"><span class="font-weight-bold">STATUS : </span>@Model.vehicle.Status.StatusName</h5>


            </div>
            <div class="col-md-4">
                <h5 class="h5 font-weight-light"><span class="font-weight-bold">COLLEGE/UNIT : </span>@Model.vehicle.College.CollegeName</h5>
                <h5 class="h5 font-weight-light"><span class="font-weight-bold">DEPARTMENT/UNIT : </span>@Model.vehicle.Department.DepartmentName</h5>
            </div>




        </div>

        @*<img class="img-fluid rounded mb-4 full-width" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="..." />*@

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (var i = 0; i < Model.VehiclePhotos.Count(); i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to=@i class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (var i = 0; i < Model.VehiclePhotos.Count(); i++)
                {
                    <div class="@(i == 0 ? "carousel-item active" : "carousel-item")">
                        <img class="d-block w-100" style="width:240px;height:240px;" src="@Model.VehiclePhotos[i].PhotoURL" alt="@Model.VehiclePhotos[i].PhotoName">
                    </div>
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <h2 class="card-text font-weight-bold mb-2">REGISTRATION PARTICULARS</h2>
        <div class="card mb-4">
            <div class="card-body row m-1" style="flex-wrap:nowrap;">
                <ul class="list-group col-sm-4">
                    <li class="list-group-item"><span class="font-weight-bold">VEHICLE REGISTRATION NO. - </span>@Model.vehicle.RegistrationNumber</li>
                    <li class="list-group-item"><span class="font-weight-bold">OWNER - </span>@Model.vehicle.Owner</li>
                    <li class="list-group-item"><span class="font-weight-bold">POSTAL ADDRESS - </span>@Model.vehicle.PostalAddress</li>
                    <li class="list-group-item"><span class="font-weight-bold">RESIDENTIAL ADDRESS - </span>@Model.vehicle.ResidentialAddress</li>
                    <li class="list-group-item"><span class="font-weight-bold">MEASUREMENTS(cm) -</span> @(Model.vehicle.Length)(L) x @(Model.vehicle.Width)(W) x @(Model.vehicle.Height)(H) </li>
                </ul>
                <ul class="list-group  col-sm-4">
                    <li class="list-group-item"><span class="font-weight-bold">MAKE - </span>@Model.MakeName</li>
                    <li class="list-group-item"><span class="font-weight-bold">MODEL - </span>@Model.vehicle.Model</li>
                    <li class="list-group-item"><span class="font-weight-bold">COLOUR - </span>@Model.vehicle.Colour</li>
                    <li class="list-group-item"><span class="font-weight-bold">CHASIS NO. - </span>@Model.vehicle.ChasisNumber</li>
                    <li class="list-group-item"><span class="font-weight-bold">SIZE OF TYRES - </span>@(Model.vehicle.SizeOfFrontTyre)(FRONT) @(Model.vehicle.SizeofMiddleTyre)(MIDDLE) @(Model.vehicle.SizeOfRearTyre)(REAR)</li>

                </ul>
                <ul class="list-group  col-sm-4">
                    <li class="list-group-item"><span class="font-weight-bold">COUNTRY OF ORIGIN - </span>@Model.vehicle.CountryOfOrigin</li>
                    <li class="list-group-item"><span class="font-weight-bold">YEAR OF MANUFACTURE - </span>@Model.vehicle.YearOfManufacture.Year</li>
                    <li class="list-group-item"><span class="font-weight-bold">NO. OF WHEELS - </span>@Model.vehicle.NumberOfWheels</li>
                    <li class="list-group-item"><span class="font-weight-bold">NO. OF AXLES - </span>@Model.vehicle.NumberOfAxles</li>
                    <li class="list-group-item"><span class="font-weight-bold">ENGINE NUMBER - </span>@Model.vehicle.EngineNumber</li>

                </ul>
            </div>
        </div>

    </div>
