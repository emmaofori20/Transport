@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="content-body">
    <section class="flexbox-container">
        <div class="col-12 d-flex align-items-center justify-content-center">
            <div class="col-md-4 col-10 p-0">
                <div class="card-header bg-transparent border-0">
                    <h2 class="error-code text-center mb-2">404</h2>
                    <h3 class="text-uppercase text-center">An error occurred while processing your request </h3>
                    @if (Model.ShowRequestId)
                    {
                        <h4>
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </h4>
                      
                    }
                </div>
                <div class="card-content">
                    <fieldset class="row py-2">
                    </fieldset>
                    <div class="row py-2">
                        <div class="col-12 text-center">
                            <a asp-action="Index" asp-controller="Request" class="btn btn-primary btn-block"><i class="ft-home"></i> Back to Home</a>
                        </div>
                        
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    
                </div>
            </div>
        </div>
    </section>
</div>


