@model RoutineActivityViewModel
@{
    ViewData["Title"] = "Create Routine Activity";
}

<h1>Create Routine Activity</h1>

<div>
    <div class="card-body" style="background-color:white; width:90%">
        <form asp-action="CreateRoutineActivity" method="post" asp-controller="SparePart">
            <div class="form-group">
                <label>Activity Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="RoutineActivityName" placeholder="Spare Part Name" style="width:50%">
                <span asp-validation-for="RoutineActivityName" class="text-danger"></span>
            </div>

            <a asp-action="Index" asp-controller="SparePart" class="btn btn-primary">Back</a>
            <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
</div>